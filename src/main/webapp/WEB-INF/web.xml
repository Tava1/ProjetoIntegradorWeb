<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CargoController</servlet-name>
        <servlet-class>com.dragsters.controllers.CargoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>com.dragsters.controllers.ClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendaController</servlet-name>
        <servlet-class>com.dragsters.controllers.VendaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarClienteCPF</servlet-name>
        <servlet-class>com.dragsters.controllers.ConsultarClienteCPF</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarProdutoID</servlet-name>
        <servlet-class>com.dragsters.controllers.ConsultarProdutoID</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoController</servlet-name>
        <servlet-class>com.dragsters.controllers.ProdutoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CargoController</servlet-name>
        <url-pattern>/CargoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/ClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendaController</servlet-name>
        <url-pattern>/VendaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarClienteCPF</servlet-name>
        <url-pattern>/ConsultarClienteCPF</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarProdutoID</servlet-name>
        <url-pattern>/ConsultarProdutoID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoController</servlet-name>
        <url-pattern>/ProdutoController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
